<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>2.7.2</version>
        <relativePath/> <!-- lookup parent from repository -->
    </parent>

    <groupId>dev.yasp</groupId>
    <artifactId>mastrfetcher</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <name>MaStR-Fetcher</name>
    <description>MaStR-Fetcher</description>

    <properties>
        <java.version>18</java.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web-services</artifactId>
            <exclusions>
                <!--Für SOAP Consumer/Client wird kein Webserver benötigt-->
                <exclusion>
                    <groupId>org.springframework.boot</groupId>
                    <artifactId>spring-boot-starter-tomcat</artifactId>
                </exclusion>
            </exclusions>
        </dependency>

        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <profiles>
        <profile>
            <!-- Ab Java 11 sind einige Bibliotheken und Implementationen ausgegliedert und müssen eingebundne werden -->
            <id>java11+</id>
            <activation>
                <!-- https://maven.apache.org/enforcer/enforcer-rules/versionRanges.html -->
                <jdk>[11,)</jdk>
            </activation>
            <dependencies>
                <dependency>
                    <groupId>org.glassfish.jaxb</groupId>
                    <artifactId>jaxb-runtime</artifactId>
                </dependency>
            </dependencies>
        </profile>
    </profiles>

    <build>
        <plugins>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
            </plugin>

            <plugin>
                <!-- Generiert Domain Klassen des SOAP Endpoints entsprechend der wsdl bzw. xsd + xjb Dateien -->
                <groupId>org.jvnet.jaxb2.maven2</groupId>
                <artifactId>maven-jaxb2-plugin</artifactId>
                <version>0.15.1</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <schemaLanguage>WSDL</schemaLanguage>
                    <generatePackage>dev.yasp.mastrfetcher.wsdl</generatePackage>
                    <schemas>
                        <schema>
                            <!-- TODO??? Absolut als Web URL lassen oder absolut im Projekt ablegen?-->
                            <!--https://www.marktstammdatenregister.de/MaStRHilfe/subpages/webdienst.html-->
                            <url>https://www.marktstammdatenregister.de/MaStRAPI/wsdl/mastr.wsdl</url>
                        </schema>
                    </schemas>
                    <!-- Bindings ergänzen/konfigurieren den Java-XML-Bind Prozess -->
                    <bindingDirectory>${basedir}/src/main/resources</bindingDirectory>
                    <bindingIncludes>
                        <include>*.xjb</include>
                    </bindingIncludes>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
